<?xml version="1.0" encoding="utf-8"?>

<!-- This template ID 'report_quality_grading_document_detail' defines the unique identifier for the QWeb report template.
     It is referenced by the report action in views/report_action.xml through the report_name field.
     This template structures how the quality grading report will be rendered in PDF format, including:
     - Header with report reference and basic information
     - Grading summary and product details
     - Detailed quality attributes per grade
     - Attached images and their locations
-->


<odoo>
    <data> 
        <template id="report_quality_grading_document_detail">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            
                            <h2 class="mt-3" style="text-align: center;">Quality Grading Report: <span t-field="doc.name"/></h2>
                            <div class="row mb-4">
                                <div class="col-6">
                                    <strong>Purchase Order:</strong> <span t-field="doc.purchase_order_id.name"/><br/>
                                    <strong>Product Tested:</strong> <span t-field="doc.product_id.display_name"/><br/>
                                    <strong>Total Qty Received:</strong> <span t-field="doc.qty_received"/> <span t-field="doc.uom_id.name"/>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>Testing Date:</strong> <span t-field="doc.receipt_date"/><br/>
                                    <strong>Tested By:</strong> <span t-field="doc.tester_id.name"/><br/>
                                    <strong>Test Location:</strong> <span t-field="doc.test_location_id.display_name"/>
                                </div>
                            </div>
                            <hr/>
                            
                            <t t-if="doc.notes">
                                <h4>General Remarks</h4>
                                <div class="alert alert-info" role="alert">
                                    <p><span t-field="doc.notes"/></p>
                                </div>
                            </t>

                            <h4>Graded Product Lines</h4>
                            <table class="table table-sm table-bordered">
                                <thead style="background-color: #f2f2f2;">
                                    <tr>
                                        <th>Grade</th>
                                        <th class="text-right">Qty (kg)</th>
                                        <th class="text-right">Rate/Kg</th>
                                        <th class="text-right">Total Amount</th>
                                        <th>Freshness</th>
                                        <th>Texture</th>
                                        <th>Moisture (%)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.test_line_ids" t-as="line">
                                        <tr>
                                            <td><span t-field="line.grade_type"/></td>
                                            <td class="text-right"><span t-field="line.qty_of_grade"/></td>
                                            <td class="text-right"><span t-field="line.rate_per_kg"/></td>
                                            <td class="text-right">
                                                <strong><span t-field="line.total_amount" t-options='{"widget": "monetary", "display_currency": doc.purchase_order_id.currency_id}'/></strong>
                                            </td>
                                            <td><span t-field="line.freshness"/></td>
                                            <td><span t-field="line.texture"/></td>
                                            <td><span t-field="line.moisture"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            
                            <h5 class="mt-4">Detailed Quality Attributes</h5>
                            <t t-foreach="doc.test_line_ids" t-as="line">
                                <h6><span t-field="line.grade_type"/>:</h6>
                                <table class="table table-sm table-condensed mb-4" style="width: 60%;">
                                    <tr>
                                        <td style="width: 30%;">Uniform Color:</td>
                                        <td style="width: 20%;"><t t-esc="line.uniform_color and 'Yes' or 'No'"/></td> 
                                        
                                        <td style="width: 30%;">Visible Mold:</td>
                                        <td style="width: 20%;"><t t-esc="line.visible_mold and 'Yes' or 'No'"/></td>
                                    </tr>
                                    <tr>
                                        <td>Physical Damage:</td>
                                        <td><t t-esc="line.physical_damage and 'Yes' or 'No'"/></td>
                                        
                                        <td>Pest Free:</td>
                                        <td><t t-esc="line.pest_free and 'Yes' or 'No'"/></td>
                                    </tr>
                                    <tr>
                                        <td>Aroma:</td>
                                        <td colspan="3"><span t-field="line.aroma"/></td>
                                    </tr>
                                </table>
                            </t>
                            
                            <t t-if="doc.image_ids">
                                <div style="page-break-before: always !important;"> 
                                    <h4 class="mt-5">Attached Images</h4>
                                    <t t-foreach="range(0, len(doc.image_ids), 3)" t-as="i">
                                        <div class="row">
                                            <t t-foreach="doc.image_ids[i:i+3]" t-as="img">
                                                <div class="col-4 mb-4"> 
                                                    <div style="width: 100%; padding-bottom: 75%; position: relative; border: 1px solid #ccc;">
                                                        <img t-attf-src="data:image/png;base64,{{img.image}}" 
                                                            style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;"/>
                                                    </div>
                                                    <p class="text-center mt-2" style="font-size: 0.9em;">
                                                        <strong><span t-field="img.name"/></strong> (Location: <span t-field="img.location"/>)
                                                    </p>
                                                </div>
                                            </t>
                                        </div>
                                    </t>
                                </div>
                            </t>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>