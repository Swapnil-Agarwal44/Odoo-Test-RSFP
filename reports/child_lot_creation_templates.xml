<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_child_lot_creation_detail" model="ir.actions.report">
            <field name="name">Child Lot Creation Report</field>
            <field name="model">custom.child.lot.creation</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_rsfp_module.report_child_lot_creation_document_detail</field>
            <field name="report_file">custom_rsfp_module.report_child_lot_creation_document_detail</field>
            <field name="print_report_name">'Child Lot Creation - %s' % object.name</field>
            <field name="binding_model_id" ref="model_custom_child_lot_creation"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_child_lot_creation_document_detail">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            
                            <h2 class="mt-3" style="text-align: center;">Sequential Child Lot Creation Report: <span t-field="doc.name"/></h2>
                            <div class="row mb-4">
                                <div class="col-6">
                                    <strong>Source Lot:</strong> <span t-field="doc.parent_lot_id.name"/><br/>
                                    <strong>Root Parent Lot:</strong> <span t-field="doc.root_parent_lot_id.name"/><br/>
                                    <strong>Product:</strong> <span t-field="doc.product_id.display_name"/><br/>
                                    <strong>Source Quantity:</strong> <span t-field="doc.source_qty_at_creation"/> <span t-field="doc.uom_id.name"/>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>Creation Date:</strong> <span t-field="doc.creation_date"/><br/>
                                    <strong>Created By:</strong> <span t-field="doc.creator_id.name"/><br/>
                                    <strong>Location:</strong> <span t-field="doc.creation_location_id.display_name"/><br/>
                                    <strong>Status:</strong> <span t-field="doc.state"/>
                                </div>
                            </div>
                            <hr/>

                            <t t-if="doc.purchase_order_id">
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h4>Purchase Order Information</h4>
                                        <div class="row">
                                            <div class="col-6">
                                                <strong>PO Number:</strong> <span t-field="doc.purchase_order_id.name"/><br/>
                                                <strong>Vendor:</strong> <span t-field="doc.purchase_order_id.partner_id.name"/>
                                            </div>
                                            <div class="col-6">
                                                <strong>Order Date:</strong> <span t-field="doc.purchase_order_id.date_order"/><br/>
                                                <strong>PO Status:</strong> <span t-field="doc.purchase_order_id.state"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr/>
                            </t>

                            <div style="page-break-inside: avoid;"> 
                                <h4>Child Lot Specification Summary</h4>
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <table class="table table-sm table-bordered" style="text-align: center;">
                                            <thead style="background-color: #f8f9fa;">
                                                <tr>
                                                    <th style="text-align: center;">S.No</th>
                                                    <th style="text-align: center;">Specified Quantity</th>
                                                    <th style="text-align: center;">Unit</th>
                                                    <th style="text-align: center;">Target Location</th>
                                                    <th style="text-align: center;">Notes</th>
                                                    <th style="text-align: center;">Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="doc.child_lot_lines" t-as="line">
                                                    <tr>
                                                        <td style="text-align: center;"><span t-esc="line_index + 1"/></td>
                                                        <td style="text-align: center;">
                                                            <t t-if="line.quantity > 0">
                                                                <span t-field="line.quantity"/>
                                                            </t>
                                                            <t t-else="">-</t>
                                                        </td>
                                                        <td style="text-align: center;"><span t-field="doc.uom_id.name"/></td>
                                                        <td style="text-align: center;">
                                                            <t t-if="line.location_id">
                                                                <span t-field="line.location_id.display_name"/>
                                                            </t>
                                                            <t t-else="">-</t>
                                                        </td>
                                                        <td style="text-align: center;">
                                                            <t t-if="line.notes">
                                                                <span t-field="line.notes"/>
                                                            </t>
                                                            <t t-else="">-</t>
                                                        </td>
                                                        <td style="text-align: center;">
                                                            <t t-if="line.created_lot_id">
                                                                <span style="background-color: #28a745; color: white; padding: 2px 8px; border-radius: 4px; font-size: 12px; font-weight: bold;">
                                                                    Created
                                                                </span>
                                                            </t>
                                                            <t t-else="">
                                                                <span style="background-color: #ffc107; color: #212529; padding: 2px 8px; border-radius: 4px; font-size: 12px; font-weight: bold;">
                                                                    Pending
                                                                </span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <tr style="background-color: #e9ecef; font-weight: bold;">
                                                    <td style="text-align: center;"><strong>Total</strong></td>
                                                    <td style="text-align: center;"><span t-field="doc.qty_total_to_create"/></td>
                                                    <td style="text-align: center;"><span t-field="doc.uom_id.name"/></td>
                                                    <td colspan="3" style="text-align: center;">
                                                        <t t-set="created_count" t-value="len([line for line in doc.child_lot_lines if line.created_lot_id])"/>
                                                        <strong><span t-esc="created_count"/> of <span t-esc="len(doc.child_lot_lines)"/> lots created</strong>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <t t-if="doc.child_lot_ids">
                                <h4 class="mt-4" style="text-align: center;">Created Child Lots with Sequential Naming</h4>
                                <t t-foreach="doc.child_lot_ids" t-as="child_lot">
                                    <t t-set="corresponding_line" t-value="doc.child_lot_lines.filtered(lambda l: l.created_lot_id == child_lot)"/>
                                    
                                    <div class="row justify-content-center mb-4" style="page-break-inside: avoid;"> 
                                        <div class="col-8">
                                            <div style="border: 2px solid #000; padding: 20px; text-align: center; background-color: #fff8dc;">
                                                
                                                <h6 style="margin-bottom: 10px; color: #d2691e; font-weight: bold;">SEQUENTIAL CHILD LOT</h6>
                                                
                                                <div style="margin-bottom: 12px;">
                                                    <img t-att-src="'/report/barcode/Code128/%s?width=400&amp;height=100' % child_lot.name" 
                                                        style="max-width: 100%; height: auto;" 
                                                        alt="Barcode"/>
                                                </div>
                                                
                                                <div style="font-weight: bold; font-size: 18px; margin-bottom: 10px; color: #000;">
                                                    <span t-field="child_lot.name"/>
                                                </div>
                                                
                                                <div style="font-size: 14px; margin-bottom: 8px;">
                                                    <strong>Product:</strong> <span t-field="child_lot.product_id.name"/>
                                                </div>
                                                
                                                <div style="font-size: 14px; margin-bottom: 8px;">
                                                    <strong>Quantity:</strong> <span t-field="child_lot.product_qty"/> <span t-field="child_lot.product_uom_id.name"/>
                                                </div>
                                                
                                                <div style="font-size: 14px; margin-bottom: 8px;">
                                                    <strong>Source Lot:</strong> <span t-field="doc.parent_lot_id.name"/>
                                                </div>
                                                
                                                <t t-if="corresponding_line">
                                                    <div style="font-size: 14px; margin-bottom: 8px;">
                                                        <strong>Location:</strong> <span t-field="corresponding_line.location_id.display_name"/>
                                                    </div>
                                                    
                                                    <t t-if="corresponding_line.notes">
                                                        <div style="font-size: 12px; margin-bottom: 8px; color: #555;">
                                                            <strong>Notes:</strong> <span t-field="corresponding_line.notes"/>
                                                        </div>
                                                    </t>
                                                </t>
                                                
                                                <div style="font-size: 12px; color: #666; margin-top: 10px;">
                                                    Created: <span t-field="doc.creation_date"/> | Report: <span t-field="doc.name"/>
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </t>

                            <t t-if="doc.notes">
                                <div style="page-break-inside: avoid;">
                                    <h4 class="mt-4">Creation Notes</h4>
                                    <div class="alert alert-info" role="alert">
                                        <p><span t-field="doc.notes"/></p>
                                    </div>
                                </div>
                            </t>

                            <!-- Sequential Naming Pattern Information -->
                            <div class="row mt-4" style="page-break-inside: avoid;">
                                <div class="col-12">
                                    <div class="alert alert-light border" style="background-color: #f8f9fa;">
                                        <h6 style="color: #495057; margin-bottom: 10px;">
                                            <i class="fa fa-info-circle"></i> Sequential Naming Pattern
                                        </h6>
                                        <p style="font-size: 13px; margin-bottom: 8px;">
                                            <strong>Base Name:</strong> <span t-field="doc.parent_lot_id.name"/><br/>
                                            <strong>Sequential Pattern:</strong> 
                                            <t t-if="doc.child_lot_ids">
                                                <t t-foreach="doc.child_lot_ids" t-as="child_lot">
                                                    <span class="badge badge-secondary mr-1" t-esc="child_lot.name"/>
                                                </t>
                                            </t>
                                        </p>
                                        <p style="font-size: 12px; color: #6c757d; margin-bottom: 0;">
                                            Each child lot receives a sequential number based on the highest existing number + 1
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-5">
                                <div class="col-12 text-center">
                                    <div style="border-top: 2px solid #000; padding-top: 20px;">
                                        <p style="font-size: 14px; color: #666;">
                                            This report confirms the creation of <strong><span t-esc="len(doc.child_lot_ids)"/> sequential child lots</strong> 
                                            from source lot <strong><span t-field="doc.parent_lot_id.name"/></strong>
                                        </p>
                                        <p style="font-size: 12px; color: #888;">
                                            Generated on <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y at %H:%M')"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>