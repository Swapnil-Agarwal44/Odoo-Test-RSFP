<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock.action_report_lot_label" model="ir.actions.report">
            <field name="name">Custom Lot/Serial Number Labels</field>
            <field name="model">stock.lot</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_rsfp_module.custom_lot_label_template</field>
            <field name="report_file">custom_rsfp_module.custom_lot_label_template</field>
            <field name="print_report_name">'Lot Label - %s' % object.name</field>
            <field name="binding_model_id" ref="stock.model_stock_lot"/>
            <field name="binding_type">report</field>
        </record>

        <template id="custom_lot_label_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="lot">
                    
                    <div class="col-6 float-left" style="display: inline-block; width: 50%; padding: 5px; box-sizing: border-box;">
                        
                        <div style="border: 1px solid #000; padding: 10px; text-align: center; min-height: 150px; background-color: #f8f9fa; margin-bottom: 10px;">
                            
                            
                            <t t-if="not lot.parent_lot_id">
                                <h6 style="margin-bottom: 5px; color: #2c5aa0; font-weight: bold; font-size: 10px;">PARENT LOT</h6>
                                
                                <div style="margin-bottom: 8px; text-align: center;">
                                    <img t-att-src="request.httprequest.url_root + 'report/barcode/Code128/%s' % lot.name" 
                                        style="max-width: 90%; height: 40px; width: 100%;" 
                                        alt="Barcode"/>
                                </div>
                                
                                <div style="font-weight: bold; font-size: 12px; margin-bottom: 5px; color: #000;">
                                    <span t-field="lot.name"/>
                                </div>
                                
                                <div style="font-size: 9px;">
                                    <strong>Prod:</strong> <span t-field="lot.product_id.name"/><br/>
                                    <strong>Qty:</strong> <span t-field="lot.product_qty"/> <span t-field="lot.product_uom_id.name"/>
                                </div>
                                
                                <t t-set="purchase_info" t-value="lot._get_purchase_order_info()"/>
                                <t t-if="purchase_info">
                                    <div style="font-size: 7px; border-top: 1px solid #ccc; padding-top: 3px; margin-top: 5px; **text-align: center;**">
                                        <strong>PO:</strong> <span t-esc="purchase_info.get('po_number', 'N/A')"/> | 
                                        <strong>Vendor:</strong> <span t-esc="purchase_info.get('vendor', 'N/A')"/> |
                                        <strong>Received:</strong> <span t-esc="purchase_info.get('received_date', 'N/A')"/>
                                    </div>
                                </t>

                                <div style="font-size: 8px; color: #666; border-top: 1px solid #ddd; padding-top: 6px; margin-top: 8px;">
                                    <strong>Created:</strong> <span t-esc="context_timestamp(lot.create_date).strftime('%d/%m/%Y %H:%M')"/><br/>
                                    <span style="font-style: italic;">Ready for Sorting/Quality Testing</span>
                                </div>
                                
                            </t>
                            <t t-else="">
                                <h6 style="margin-bottom: 5px; color: #d2691e; font-weight: bold; font-size: 10px;">CHILD LOT</h6>
                                
                                <div style="margin-bottom: 8px; text-align: center;">
                                    <img t-att-src="request.httprequest.url_root + 'report/barcode/Code128/%s' % lot.name" 
                                        style="max-width: 90%; height: 40px; width: 100%;" 
                                        alt="Barcode"/>
                                </div>
                                
                                <div style="font-weight: bold; font-size: 12px; margin-bottom: 5px; color: #000;">
                                    <span t-field="lot.name"/>
                                </div>
                                
                                <div style="font-size: 9px;">
                                    <strong>Prod:</strong> <span t-field="lot.product_id.name"/><br/>
                                    <strong>Parent:</strong> <span t-field="lot.parent_lot_id.name"/>
                                </div>
                                
                                <t t-set="processing_info" t-value="lot._get_processing_info()"/>
                                <t t-if="processing_info">
                                    <div style="font-size: 7px; border-top: 1px solid #ccc; padding-top: 3px; margin-top: 5px; **text-align: center;**">
                                        <strong>Sorted:</strong> <span t-esc="processing_info.get('sorted_date', 'N/A')"/>
                                    </div>
                                </t>

                                <div style="font-size: 8px; color: #666; border-top: 1px solid #ddd; padding-top: 6px; margin-top: 8px;">
                                    <strong>Created:</strong> <span t-esc="context_timestamp(lot.create_date).strftime('%d/%m/%Y %H:%M')"/><br/>
                                    <span style="font-style: italic;">Graded Product Ready for Sale</span>
                                </div>
                                
                            </t>
                            
                        </div>
                        
                    </div>
                    
                </t>
            </t>
        </template>
    </data>
</odoo>