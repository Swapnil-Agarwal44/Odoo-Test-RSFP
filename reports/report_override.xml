<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- 
            TARGETED OVERRIDE:
            We are modifying the core Odoo report action (stock.action_report_lot_label) 
            to use our custom QWeb template (custom_rsfp_module.custom_lot_label_template).
            
            This ensures that printing from *all* standard Odoo flows (like Transfers/Receipts)
            will use our customized layout instead of the default, un-customized layout.
        -->
        <record id="stock.action_report_lot_label" model="ir.actions.report">
            <field name="report_name">custom_rsfp_module.custom_lot_label_template</field>
            <field name="report_file">custom_rsfp_module.custom_lot_label_template</field>
            <!-- We keep the original ID, just change the template link -->
        </record>
    </data>
</odoo>