<!-- This XML file defines the report action for Quality Grading Reports:
     - Creates a PDF report action that can be triggered from the UI
     - Links the QWeb template to the custom.quality.grading model
     Key components:
     - report_type: Specifies PDF output format
     - report_name: Links to the template ID in custom_quality_report_templates.xml
     - binding_model_id: Adds report to the Print menu of quality grading records
     - binding_type: Specifies this is a printable report action
-->

<odoo>
    <record id="action_report_quality_grading_detail" model="ir.actions.report">
        <field name="name">Detailed Quality Report</field>
        <field name="model">custom.quality.grading</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_rsfp_module.report_quality_grading_document_detail</field>
        <field name="report_file">custom.quality.grading</field>
        
        <field name="binding_model_id" ref="model_custom_quality_grading"/>
        <field name="binding_type">report</field>
    </record>
</odoo>