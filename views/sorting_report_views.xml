<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sorting Report Action -->
        <record id="action_sorting_report" model="ir.actions.act_window">
            <field name="name">Sorting Reports</field>
            <field name="res_model">custom.sorting.report</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Sorting Report
                </p>
                <p>
                    Sort parent lots into graded child lots before quality testing.
                </p>
            </field>
        </record>

        <!-- Menu Item for Sorting -->
        <menuitem id="menu_sorting_report" 
                  name="Sorting" 
                  parent="custom_rsfp_module.menu_quality_root" 
                  action="action_sorting_report" 
                  sequence="20"/>

        <!-- Sorting Report Tree View -->
        <record id="view_sorting_report_tree" model="ir.ui.view">
            <field name="name">custom.sorting.report.tree</field>
            <field name="model">custom.sorting.report</field>
            <field name="arch" type="xml">
                <tree string="Sorting Reports">
                    <field name="name"/>
                    <field name="parent_lot_id"/>
                    <field name="product_id"/>
                    <field name="sorting_date"/>
                    <field name="sorter_id"/>
                    <field name="qty_total_sorted"/>
                    <field name="inventory_processed" widget="boolean_toggle"/>
                    <field name="state" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'"/>
                </tree>
            </field>
        </record>

        <!-- Sorting Report Form View -->
        <record id="view_sorting_report_form" model="ir.ui.view">
            <field name="name">custom.sorting.report.form</field>
            <field name="model">custom.sorting.report</field>
            <field name="arch" type="xml">
                <form string="Sorting Report">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm Sorting" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" 
                            invisible="state != 'confirmed'"/>
                        <button name="action_fix_parent_lot_inventory" 
                                type="object" 
                                string="Fix Inventory Mismatch"
                                class="btn-warning"
                                invisible="state != 'confirmed'" 
                                confirm="This will transfer negative quantities from WH/Stock to DS/Stock for this parent lot. Continue?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        
                        <!-- Basic Information -->
                        <group>
                            <group>
                                <field name="parent_lot_id" readonly="state == 'confirmed'" 
                                       options="{'no_create': True}"/>
                                <field name="product_id" readonly="1"/>
                                <field name="purchase_order_id" readonly="1"/>
                                <field name="uom_id" readonly="1" groups="uom.group_uom"/>
                            </group>
                            <group>
                                <field name="sorting_date" readonly="state == 'confirmed'"/>
                                <field name="sorter_id" readonly="state == 'confirmed'"/>
                                <field name="sorting_location_id" readonly="state == 'confirmed'"/>
                            </group>
                        </group>

                        <!-- Quantity Information -->
                        <separator string="Sorting Quantities"/>
                        <group>
                            <group string="Parent Lot">
                                <field name="parent_qty_total" readonly="1"/>
                            </group>
                            <group string="Sorted Quantities">
                                <field name="qty_grade_a" readonly="state == 'confirmed'"/>
                                <field name="qty_grade_b" readonly="state == 'confirmed'"/>
                                <field name="qty_grade_c" readonly="state == 'confirmed'"/>
                                <field name="qty_grade_dc" readonly="state == 'confirmed'"/>
                                <field name="qty_total_sorted" readonly="1" 
                                       decoration-success="qty_total_sorted == parent_qty_total"
                                       decoration-warning="qty_total_sorted != parent_qty_total"/>
                            </group>
                        </group>

                        <!-- UPDATED: Processing Status with selectable child lot names -->
                        <group invisible="state == 'draft'">
                            <field name="inventory_processed" readonly="1"/>
                            
                            <!-- Display child lots with clickable buttons -->
                            <div colspan="2" invisible="not inventory_processed">
                                <div class="o_form_label">Created Child Lots</div>
                                
                                <!-- Show child lots as clickable buttons -->
                                <div class="o_field_many2many_tags" style="border: 1px solid #ced4da; padding: 8px; border-radius: 4px; background-color: #f8f9fa;">
                                    <field name="child_lot_ids" widget="many2many_tags" 
                                           options="{'no_create': True, 'no_edit': True}" 
                                           readonly="1"/>
                                </div>
                                
                                <!-- Buttons for interaction -->
                                <div class="mt-2">
                                    <button name="action_view_all_child_lots" 
                                            type="object" 
                                            string="View All Child Lots"
                                            class="btn btn-primary btn-sm"
                                            invisible="not child_lot_ids"/>
                                </div>
                                
                                <!-- Copyable text area -->
                                <div class="alert alert-info mt-2" invisible="not child_lot_ids">
                                    <small><strong>Copy child lot names:</strong></small>
                                    <div class="mt-1" style="font-family: monospace; background-color: white; padding: 8px; border-radius: 4px; border: 1px solid #dee2e6; user-select: text; cursor: text;">
                                        <field name="child_lot_names" readonly="1" nolabel="1"/>
                                    </div>
                                    <small class="text-muted mt-1">ðŸ’¡ Click in the box above and press Ctrl+A to select all, then Ctrl+C to copy</small>
                                </div>
                            </div>
                            
                            <div colspan="2" invisible="inventory_processed">
                                <span class="text-muted">No child lots created yet</span>
                            </div>
                        </group>
                        <group>
                            <field name="notes" placeholder="Sorting notes and observations..." 
                                   readonly="state == 'confirmed'"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>