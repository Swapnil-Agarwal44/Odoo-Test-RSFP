<odoo noupdate="1">
    <data>
        <!-- Main Sequence Definition for the lots created for products -->
        <record id="seq_parent_lot_daily" model="ir.sequence">
            <field name="name">Daily Parent Lot Sequence</field>
            <field name="code">parent.lot.daily.sequence</field>
            <field name="prefix"></field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">False</field>  <!-- Changed to False -->
            <field name="number_next">1</field>
        </record>
    </data>
</odoo>









